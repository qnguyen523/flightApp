@model flightApp.Pages.Flights.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Flight.ID" />
            <div class="form-group">
                <label asp-for="Flight.departure" class="control-label"></label>
                <input asp-for="Flight.departure" class="form-control" />
                <span asp-validation-for="Flight.departure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.destination" class="control-label"></label>
                <input asp-for="Flight.destination" class="form-control" />
                <span asp-validation-for="Flight.destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.departureTime" class="control-label"></label>
                <input asp-for="Flight.departureTime" class="form-control" />
                <span asp-validation-for="Flight.departureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.arrivalTime" class="control-label"></label>
                <input asp-for="Flight.arrivalTime" class="form-control" />
                <span asp-validation-for="Flight.arrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.Class" class="control-label"></label>
                <input asp-for="Flight.Class" class="form-control" />
                <span asp-validation-for="Flight.Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.Price" class="control-label"></label>
                <input asp-for="Flight.Price" class="form-control" />
                <span asp-validation-for="Flight.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
